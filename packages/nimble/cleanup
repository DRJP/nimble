#!/bin/sh

FILES=`cd inst/CppCode; ls *.cpp`

for f in $FILES ; do
 if test -e src/$f; then
    echo "src/$f"
    rm src/$f
 fi
done

#cp inst/CppCode/libnimble.dylib $R_PACKAGE_DIR/libs/libnimble.dylib 

(cd inst/CppCode ; make clean)
(cd src ; rm *.o ; rm *.so )

# We may want to be careful about doing this, i.e.
# when we are packaging up a release  where we want to clean up
# and then ensure that there is a copy of Eigen in the directory structure.
if test -d inst/include/Eigen ; then
  rm -fr inst/include/Eigen
fi




